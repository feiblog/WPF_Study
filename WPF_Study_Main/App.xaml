<Application x:Class="WPF_Study_Main.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_Study_Main"
             xmlns:Converter="clr-namespace:WPF_Study_Main.Converter"
             StartupUri="Win/MainWin.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--HandyControl-->
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
                <!--加载默认皮肤-->
                <ResourceDictionary Source="Styles/Themes/Theme_DarkBlue.xaml"/>
                <!--加载样式表-->
                <ResourceDictionary Source="Styles/Controls.Button.xaml"/>
                <ResourceDictionary Source="Styles/Controls.Expander.xaml"/>
                <ResourceDictionary Source="Styles/Controls.RadioButton.xaml"/>

            </ResourceDictionary.MergedDictionaries>

            <Converter:DPIConverter x:Key="DPIConverter"/>
        </ResourceDictionary>

    </Application.Resources>
</Application>
